@model CmsCore.Admin.Models.LanguageViewModel
@{
    ViewData["Title"] = "Yeni Ürün";
}
<script src="//cdn.ckeditor.com/4.6.2/standard/ckeditor.js"></script>
<script src="~/js/generate-slug.js"> </script>
<br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li><a asp-controller="Product" asp-action="Index" class="nav-link">Languages</a><i class="fa fa-circle"></i></li>
        <li><span>Create</span></li>
    </ul>
</div>
<br />
<div class="row">
    <div class="col-md-12 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title" style="border-bottom-width: 1px;margin-bottom: 10px;">
                <div class="caption font-dark"><i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase ">Add New Language</span>
                </div>
            </div>
            <form asp-controller="Language" asp-action="Create" method="post" enctype="multipart/form-data">
                <div class="row">
                    <div class="col-md-12">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="portlet-body form">
                    <div class="form-body">
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for="Name" class="form-control" tabindex="1" autofocus="autofocus" />
                            <span class="text-danger" asp-validation-for="Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NativeName"></label>
                            <input type="text" asp-for="NativeName" class="form-control" tabindex="2"  />
                            <span class="text-danger" asp-validation-for="NativeName"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Culture"></label>
                            <input type="text" asp-for="Culture" class="form-control" tabindex="3"/>
                            <span class="text-danger" asp-validation-for="Culture"></span>
                        </div>
                    <div class="form-group">
                        <button type="submit" tabindex="4" class="btn blue">Save</button>
                        <a type="button" tabindex="5" class="btn default" href="Index">Cancel</a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
</div>