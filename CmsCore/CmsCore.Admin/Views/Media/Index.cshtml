@{
    ViewBag.Title = "Files";
}
<link href="@(ViewBag.AssetsUrl)/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="@(ViewBag.AssetsUrl)/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" /><br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li><a href="@Url.Action("Index", "Media")" class="nav-link">Media</a><i class="fa fa-circle"></i></li>
        <li><span>Files</span></li>
    </ul>
</div><br />
<div class="row">
    <div class="col-md-12">
        <!-- BEGIN EXAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title"><h1 class="page-title">All Files</h1></div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="btn-group">
                                <a href="@Url.Action("Create", "Media")" id="sample_editable_1_new" class="btn sbold green">New File <i class="fa fa-plus"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            <table class="table table-striped table-bordered table-hover table-checkable order-column" id="mediaTable">
                <thead>
                    <tr>
                        <th><label class="mt-checkbox mt-checkbox-single mt-checkbox-outline">
                                <input type="checkbox" class="group-checkable" data-set="#mediaTable .checkboxes" />
                                <span></span></label>
                        </th>
                        <th>File Name</th>
                        <th>Upload By</th>
                        <th>Upload Date</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
    <!-- END EXAMPLE TABLE PORTLET-->
</div>
</div>
@section scripts {
    <script src="@(ViewBag.AssetsUrl)/global/scripts/datatable.js" type="text/javascript"></script>
    <script src="@(ViewBag.AssetsUrl)/global/plugins/datatables/datatables.min.js" type="text/javascript"></script>
    <script src="@(ViewBag.AssetsUrl)/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.js" type="text/javascript"></script>
    <script src="@(ViewBag.AssetsUrl)/global/plugins/bootstrap-datepicker/js/bootstrap-datepicker.min.js" type="text/javascript"></script>
    <script src="~/js/pages/media-index.js"></script>
    <script src="@(ViewBag.AssetsUrl)/pages/scripts/table-datatables-buttons.min.js" type="text/javascript"></script>


    <script>
        $(document).ready(function () {
            initTable1();
        });
    </script>
}


