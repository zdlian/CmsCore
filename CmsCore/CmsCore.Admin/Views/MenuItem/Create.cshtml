@model MenuItem
@{
    ViewBag.Title = "Yeni Menü";
}
<link href="@(ViewBag.AssetsUrl)/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="@(ViewBag.AssetsUrl)/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" /><br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li><a href="@Url.Action("Index", "MenuItem")" class="nav-link">Görünüm</a><i class="fa fa-circle"></i></li>
        <li><span>Yeni Menü</span></li>
    </ul>
</div><br />
<div class="row">
    <div class="col-md-12 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <h1 class="page-title">Yeni Menü Öğesi</h1>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.AntiForgeryToken()
            <div class="portlet-body form">
                <form role="form" method="post" asp-action="Create" asp-controller="MenuItem">
                    <div class="form-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name)
                            @Html.TextBoxFor(model => model.Name, new { @tabindex = "1", @class = "form-control spinner", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Url)
                            @Html.TextBoxFor(model => model.Url, new { @tabindex = "1", @class = "form-control spinner"})
                            @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Target)
                            @Html.TextBoxFor(model => model.Target, new { @tabindex = "1", @class = "form-control spinner"})
                            @Html.ValidationMessageFor(model => model.Target, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.ParentMenuItemId)
                            @Html.DropDownList("ParentMenuItemId", (IEnumerable<SelectListItem>)ViewBag.ParentMenuItemId, "<seçiniz>", new { @tabindex = "2", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.ParentMenuItemId, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MenuId)
                            @Html.DropDownList("MenuId", (IEnumerable<SelectListItem>)ViewBag.MenuId, new { @tabindex = "2", @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.MenuId, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" tabindex="3" class="btn blue">Ekle</button>
                        <button type="button" tabindex="4" class="btn default" onclick="window.location='@Url.Action("Index","MenuItem")';">İptal</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- END SAMPLE FORM PORTLET-->
