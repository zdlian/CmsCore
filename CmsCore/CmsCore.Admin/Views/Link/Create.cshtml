@model LinkViewModel
@{
    ViewBag.Title = "New Link";
}
<link href="@(ViewBag.AssetsUrl)/global/plugins/datatables/datatables.min.css" rel="stylesheet" type="text/css" />
<link href="@(ViewBag.AssetsUrl)/global/plugins/datatables/plugins/bootstrap/datatables.bootstrap.css" rel="stylesheet" type="text/css" /><br />
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li><a href="@Url.Action("Index", "Link")" class="nav-link">Links</a><i class="fa fa-circle"></i></li>
        <li><span>New Link</span></li>
    </ul>
</div><br />
<div class="row">
    <div class="col-md-12 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <h1 class="page-title">Create</h1>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>
            </div>
            @Html.AntiForgeryToken()
            <div class="portlet-body form">
                <form role="form" method="post" asp-action="Create" asp-controller="Link">
                    <div class="form-body">
                        <div class="form-group">
                            @Html.LabelFor(model => model.Name)
                            @Html.TextBoxFor(model => model.Name, new { @tabindex = "1", @class = "form-control spinner", autofocus = "autofocus" })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Url)
                            @Html.TextBoxFor(model => model.Url, new { @tabindex = "2", @class = "form-control spinner" })
                            @Html.ValidationMessageFor(model => model.Url, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Description)
                            @Html.TextAreaFor(model => model.Description, new { @tabindex = "3", @class = "form-control spinner" })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Target)
                            @Html.TextBoxFor(model => model.Target, new { @tabindex = "4", @class = "form-control spinner" })
                            @Html.ValidationMessageFor(model => model.Target, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.IsVisible)
                            @Html.CheckBoxFor(model => model.IsVisible, new { @tabindex = "5", @class = "form-control spinner" })
                            @Html.ValidationMessageFor(model => model.IsVisible, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-actions">
                        <button type="submit" tabindex="6" class="btn blue">Add</button>
                        <button type="button" tabindex="7" class="btn default" onclick="window.location='@Url.Action("Index","Link")';">Cancel</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- END SAMPLE FORM PORTLET-->
