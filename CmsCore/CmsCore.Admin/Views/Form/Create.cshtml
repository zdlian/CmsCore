@model FormViewModel
<!DOCTYPE html>
<meta charset="utf-8" />
<title>@ViewBag.Title</title>
<br />
<script src="/Scripts/ckeditor/ckeditor.js"></script>
<style>
    textarea {
        max-width: 100%;
        max-height: 100%;
    }
</style>
<div class="page-bar">
    <ul class="page-breadcrumb">
        <li>
            <a href="@Url.Action("Index","Form")">Formlar</a>
            <i class="fa fa-circle"></i>
        </li>
        <li>
            <span>Yeni Form</span>
        </li>
    </ul>
    <div class="page-toolbar">

    </div>
</div>
<br />
<div class="row">
    <div class="col-md-12">
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption font-dark">
                    <i class="icon-settings font-dark"></i>
                    <span class="caption-subject bold uppercase">Yeni Form</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    
                </div>
            </div>
            <div class="row">
                @using (Html.BeginForm())
                {
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.AntiForgeryToken()
                    <div class="col-md-12 ">
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                        <div class="portlet light bordered">

                            <!--İLAN VERİLİŞ TARİHİ O AN ALINACAK-->



                            <div class="portlet-body form">

                                <div class="form-body">
                                    <div class="form-group">
                                        Form İsmi Giriniz:
                                        @Html.EditorFor(model => model.FormName, new { htmlAttributes = new { @tabindex = "1", @class = "form-control spinner", autofocus = "autofocus" } })
                                        @Html.ValidationMessageFor(model => model.FormName, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        E-posta adresi giriniz:
                                        To: @Html.EditorFor(model => model.EmailTo, new { htmlAttributes = new { @tabindex = "2", @class = "form-control spinner", multiple = "true", type = "email" } })
                                        @Html.ValidationMessageFor(model => model.EmailTo, "", new { @class = "text-danger" })
                                        cc: @Html.EditorFor(model => model.EmailCc, new { htmlAttributes = new { @tabindex = "3", @class = "form-control spinner", multiple="true", type="email" } })
                                        @Html.ValidationMessageFor(model => model.EmailCc, "", new { @class = "text-danger" })
                                        bcc: @Html.EditorFor(model => model.EmailBcc, new { htmlAttributes = new { @tabindex = "4", @class = "form-control spinner", multiple = "true", type = "email" } })
                                        @Html.ValidationMessageFor(model => model.EmailBcc, "", new { @class = "text-danger" })
                                    </div>
                                    <div class="form-group">
                                        Açıklama Giriniz:
                                        @Html.TextAreaFor(model => model.Description, new { @tabindex = "5", @class = "form-control spinner" })
                                        @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                                        <script>
                                    CKEDITOR.replace('Description');
                                        </script>
                                    </div>
                                    <div class="form-group">
                                        Kapanış Mesajı Giriniz:
                                        @Html.TextAreaFor(model => model.ClosingDescription, new { @tabindex = "6", @class = "form-control spinner" })
                                        @Html.ValidationMessageFor(model => model.ClosingDescription, "", new { @class = "text-danger" })
                                        <script>
                                    CKEDITOR.replace('ClosingDescription');
                                        </script>
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group">
                                            Google Analytics:
                                            @Html.TextAreaFor(model => model.GoogleAnalyticsCode, new { @tabindex = "7", @class = "form-control spinner"})
                                            @Html.ValidationMessageFor(model => model.GoogleAnalyticsCode, "", new { @class = "text-danger" })
                                            </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <input type="submit" />
                        <!-- END SAMPLE FORM PORTLET-->
                        <!-- BEGIN SAMPLE FORM PORTLET-->
                    </div>
                }
            </div>
        </div>
    </div>
</div>



